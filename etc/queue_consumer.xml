<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework-message-queue:etc/consumer.xsd">

    <consumer name="sizebay.cart.add"
              queue="sizebay.cart.add.queue"
              handler="Sizebay\SizebayTracker\Model\Consumer\CartAddConsumer"
              connection="amqp"
              maxMessages="100"
              onlySpawnWhenMessageAvailable="1"/>

    <consumer name="sizebay.order"
              queue="sizebay.order.queue"
              handler="Sizebay\SizebayTracker\Model\Consumer\OrderConsumer"
              connection="amqp"
              maxMessages="100"
              onlySpawnWhenMessageAvailable="1"/>

</config>
